generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type InventoryProductList {
  product  String @db.ObjectId
  quantity Int
}

type OrderProductList {
  product  String
  quantity String
}

type ProductProperties {
  name  String
  value String
}

type UserAddress {
  name  String
  value String
}

model brand {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  description String
  name        String
}

model category {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  description String
  mainProps   String[]
  name        String
  /// Could not determine type: the field only had null or empty values in the sample set.
  parentID    Json?
}

model inventory {
  id          String                 @id @default(auto()) @map("_id") @db.ObjectId
  address     String
  name        String
  productList InventoryProductList[]
}

model order {
  id            String             @id @default(auto()) @map("_id") @db.ObjectId
  paymentMethod String
  productList   OrderProductList[]
  status        String
  subTotal      Int
  total         Int
  user_id       String
  voucher       String
}

model product {
  id          String              @id @default(auto()) @map("_id") @db.ObjectId
  brand       String              @db.ObjectId
  category    String              @db.ObjectId
  description String
  image       String
  name        String
  price       Int
  properties  ProductProperties[]
}

model review {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  comment String
  product String @db.ObjectId
  rate    Float
  user    String @db.ObjectId
}

model user {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  address     UserAddress[]
  dateOfBirth DateTime      @db.Date
  email       String
  fullname    String
  password    String
  phoneNumber String
  role        String
  username    String
}

model voucher {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  code        String
  condition   String
  description String
  quantity    Int
}
